<h1>Delete</h1>

<style>
    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7);
    }

    .modal-content {
        background-color: #fff;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 50%;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        text-align: center;
    }

    .close {
        color: #888;
        float: right;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
    }

        .close:hover {
            color: #000;
        }

    .btn-danger {
        background-color: #ff3333;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-danger:hover {
            background-color: #ff0000;
        }

    .btn-secondary {
        background-color: #888;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-secondary:hover {
            background-color: #666;
        }
</style>

<h3>Are you sure you want to delete '@($"{Model.FirstName} {Model.LastName}")'?</h3>
<div>
    <br />
    <h4>Employee Profile</h4>
    <hr />
    @if (Model != null)
    {
        <dl class="row">
            <dt class="col-sm-2">
                Employee Name:
            </dt>
            <dd class="col-sm-10">
                @($"{Model.FirstName} {Model.LastName}")
            </dd>
            <dt class="col-sm-2">
                Department:
            </dt>
            <dd class="col-sm-10">
                @Model.DepartmentName
            </dd>
            <dt class="col-sm-2">
                Date of Birth:
            </dt>
            <dd class="col-sm-10">
                @Model.DateOfBirth.ToString("MM/dd/yyyy")
            </dd>
            <dt class="col-sm-2">
                Email Address:
            </dt>
            <dd class="col-sm-10">
                @Model.EmailAddress
            </dd>
            <dt class="col-sm-2">
                Phone Number:
            </dt>
            <dd class="col-sm-10">
                @Model.PhoneNumber
            </dd>
            <dt class="col-sm-2">
                Address:
            </dt>
            <dd class="col-sm-10">
                @Model.Address
            </dd>
        </dl>
    }
    else
    {
        <p>Employee Not Found!</p>
    }
    <button type="button" class="btn btn-danger" onclick="openModal()">Delete</button>
    <div align="right">
        <a href="/EmployeeMVC/Index" class="btn btn-primary">Back to List</a>
    </div>
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }
</div>

<div id="customModal" class="modal">
    <div class="modal-content">
        @if (Model != null)
        {
            <p>Are you sure you want to delete '@($"{Model.FirstName} {Model.LastName}")'?</p>
        }
        <form action="/EmployeeMVC/DeleteEmployee" method="post" id="DeleteForm">
            @if (Model != null)
            {
                <input type="hidden" id="EmployeeID" name="EmployeeID" value="@Model.EmployeeID" />
            }
            <button type="button" class="btn btn-danger" onclick="submitForm()">Delete</button>
            <button type="button" class="btn btn-secondary" onclick="closeModal()">Cancel</button>
        </form>
    </div>
</div>

<script>
    function openModal() {
        var modal = document.getElementById("customModal");
        modal.style.display = "block";
    }

    function closeModal() {
        var modal = document.getElementById("customModal");
        modal.style.display = "none";
    }

    function submitForm() {
        // Submit the form for deletion
        document.getElementById("DeleteForm").submit();
    }
</script>